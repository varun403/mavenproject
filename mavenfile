pipeline{
    agent any
    environment{
        PATH = "/opt/apps/maven/apache-maven-3.6.3/bin:$PATH"
      }
      options {
        buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '3', numToKeepStr: '5')
        timestamps
        timeout(10)
      }

    stages{
        stage('checkout'){
            steps{
                checkout scm
            }
        }
        stage('Build'){
            steps{
                sh "mvn clean package -Dskiptests "
            }
        }
        stage('Test'){
            steps{
               sh "mvn test"
             }
         }    
    }
}
