pipeline{
    agent any
    environment{
        PATH = "/opt/apps/maven/apache-maven-3.6.3/bin:$PATH"
      }
    stages{
        stage('checkout'){
            steps{
                checkout scm
            }
        }
        stage('Build'){
            steps{
                sh "mvn clean install -Dskiptests "
            }
        }
        stage('Test'){
            steps{
               sh "mvn test"
             }
         }    
    }
}
